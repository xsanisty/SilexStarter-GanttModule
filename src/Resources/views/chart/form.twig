<form action="{{ url_for('gantt.chart.store') }}" class="form-horizontal" id="chart-form" method="post">
    <input type="hidden" id="_method" name="_method" value="POST">
    <input type="hidden" id="id" name="id">
    <div class="form-group">
        <label for="name" class="col-md-3">Chart Name</label>
        <div class="col-md-9">
            <input id="name" name="name" type="text" class="form-control input-sm">
        </div>
    </div>

    <div class="form-group">
        <label for="visibility" class="col-md-3">Visibility</label>
        <div class="col-md-9">
            <select id="visibility" name="visibility" type="text" class="form-control input-sm">
                <option value="private">Private</option>
                <option value="public">Public</option>
            </select>
        </div>
    </div>

    <div class="form-group" style="border-bottom: solid 1px #ddd">
        <label for="" class="col-md-12">Sidebar Configuration</label>
    </div>

    <div class="form-group">
        <label class="col-md-2 col-md-offset-1">Type</label>
        <label class="col-md-5">Label</label>
        <label class="col-md-2">Align</label>
        <label class="col-md-2">Width</label>
    </div>

    {% for field in ['text', 'start_date', 'progress', 'duration', 'priority'] %}
        <div class="form-group">
            <div class="col-md-1">
                <div class="checkbox icheck" style="padding-top: 2px">
                    <label><input type="checkbox" name="settings[grid][{{field}}][enabled]"></label>
                </div>
            </div>
            <div class="col-md-2">
                <input type="text" class="form-control input-sm" name="settings[grid][{{field}}][name]" value="{{field}}" readonly>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control input-sm" name="settings[grid][{{field}}][label]">
            </div>
            <div class="col-md-2">
                <select name="" id="" class="form-control input-sm" style="width: 100%" name="settings[grid][{{field}}][align]">
                    <option value="left">left</option>
                    <option value="center">center</option>
                    <option value="right">right</option>
                </select>
            </div>
            <div class="col-md-2">
                <input type="text" class="form-control input-sm" name="settings[grid][{{field}}][width]">
            </div>
        </div>
    {% endfor %}

    <div class="form-group">
        <div class="col-md-12">
            <button id="btn-chart-save" class="btn btn-sm btn-primary pull-right">Save</button>
            <button id="btn-chart-cancel" class="btn btn-sm btn-danger pull-right" style="margin-right: 5px" data-dismiss="modal">Cancel</button>
        </div>
    </div>
</form>
