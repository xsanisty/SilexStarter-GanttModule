{% set template = config.get('@silexstarter-dashboard.config.template') %}
{% extends '@silexstarter-dashboard/'~ template ~'/index.twig' %}

{% block stylesheet %}
    {{parent()}}

    {{ stylesheet([
        '@silexstarter-datatable/css/dataTables.bootstrap.css',
        '@silexstarter-datatable/css/responsive.bootstrap.min.css',
    ]) }}
{% endblock %}

{% block content %}
    {% if current_user.hasAnyAccess(['admin', 'gantt.chart.create']) %}
        <a href="{{ url_for('gantt.chart.create') }}" class="btn btn-sm btn-primary btn-block-sm" id="btn-chart-create">
            <i class="fa fa-fw fa-plus"></i>
            Create New Chart
        </a>
    {% endif %}
    <table class="table table-condensed table-striped" id="gantt-table" style="width: 100%; max-width: 1200px">
        <thead>
            <tr>
                <th class="all" style="width: 25%">Chart Title</th>
                <th class="all" style="width: 20%">Author</th>
                <th class="desktop" style="width: 20%">Collaborators</th>
                <th class="desktop" style="width: 15%">Created At</th>
                <th class="desktop text-center" style="width: 20%">Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-center" colspan="3">Data not loaded!</td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block modal %}
    {{parent()}}
    {% include '@xsanisty-gantt/chart/modal.twig' %}
{% endblock %}

{% block javascript %}
    {{ parent() }}

    {{ javascript([
        '@silexstarter-datatable/js/jquery.dataTables.min.js',
        '@silexstarter-datatable/js/dataTables.bootstrap.min.js',
        '@silexstarter-datatable/js/dataTables.responsive.min.js',
        '@xsanisty-gantt/js/datatable.js',
    ]) }}

{% endblock %}
